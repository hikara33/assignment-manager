generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String

  name String
  role UserRole @default(STUDENT)

  refreshTokens RefreshToken[] @relation("user-tokens")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  @@map("users")
}

model RefreshToken {
  id String @id @default(uuid())

  hashToken String

  userId String
  user   User   @relation("user-tokens", fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  @@index([userId])
  @@map("refresh-tokens")
}

enum UserRole {
  ADMIN
  STUDENT
}